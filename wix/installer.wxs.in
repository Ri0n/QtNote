<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <Package
        Name="QtNote"
        Manufacturer="R-Soft"
        Version="@VERSION_FOR_WIX@"
        UpgradeCode="@UPGRADE_CODE@"
        InstallerVersion="500"
        Compressed="yes"
        Scope="perMachine">

        <Media Id="1" Cabinet="product.cab" EmbedCab="yes" />

        <!-- Используем StandardDirectory для TARGETDIR и ProgramFiles64Folder -->
        <StandardDirectory Id="TARGETDIR" />
        <StandardDirectory Id="ProgramFiles64Folder">
            <Directory Id="APPLICATIONROOTDIRECTORY" Name="QtNote">
                @COMPONENTS@
            </Directory>
        </StandardDirectory>

        <StandardDirectory Id="ProgramMenuFolder">
            <Directory Id="ProgramMenuDir" Name="QtNote">
                <!-- Здесь будут созданы ярлыки -->
                <Component Id="StartMenuShortcuts" Guid="*">
                    <RemoveFolder Id="ProgramMenuDir" On="uninstall" />
                    <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]" Name="installed" Type="integer" Value="1" KeyPath="yes" />
                    <Shortcut Id="ExeShortcut"
                              Name="QtNote"
                              Description="Launch QtNote"
                              Target="[APPLICATIONROOTDIRECTORY]QtNote.exe"
                              WorkingDirectory="APPLICATIONROOTDIRECTORY" />
                </Component>
            </Directory>
        </StandardDirectory>

        <!-- Основная функция -->
        <Feature Id="DefaultFeature" Title="Main Feature" Level="1">
            @COMPONENT_REFS@
            <ComponentRef Id="StartMenuShortcuts" />
        </Feature>

        <Icon Id="DesktopIcon.exe" SourceFile="@CMAKE_INSTALL_PREFIX@/qtnote.exe" />
        <Icon Id="StartMenuIcon.exe" SourceFile="@CMAKE_INSTALL_PREFIX@/qtnote.exe" />
        <Icon Id="icon.ico" SourceFile="@CMAKE_SOURCE_DIR@/src/win/pen64.ico" />
        <Property Id="ARPPRODUCTICON" Value="icon.ico" />
        <MajorUpgrade
            DowngradeErrorMessage="A later version of [ProductName] is already installed. Setup will now exit."
            Schedule="afterInstallInitialize"
            AllowSameVersionUpgrades="yes" />
    </Package>
</Wix>
